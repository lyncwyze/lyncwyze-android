<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <ImageView android:id="@+id/imageViewChildImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        style="@style/NeomorphicImageViewStyle"
        android:layout_gravity="center_vertical"
        android:src="@drawable/default_user" />

    <LinearLayout android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="8dp" >
        <TextView
            android:id="@+id/textViewChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"

            android:layout_marginTop="14dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins"
            android:hint="@string/child_1" />
        <TextView
            android:id="@+id/childGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:hint="@string/child_gender"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView android:id="@+id/viewChild"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:src="@drawable/icon_three_dot"
        android:contentDescription="@string/more_options"
        android:layout_gravity="center_vertical"
        android:padding="8dp" />

</LinearLayout>
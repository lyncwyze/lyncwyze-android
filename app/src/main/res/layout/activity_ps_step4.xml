<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".enteredUser.profileSetup.Activity_PS_Step4">

    <!-- Back Button Container -->
    <FrameLayout
        android:id="@+id/aclBackButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/aclBackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/back_button_description"
            android:src="@drawable/back_arrow" />

    </FrameLayout>


    <!-- Bold Heading Text -->
    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept_terms_and_privacy_policies"
        android:fontFamily="@font/poppins_medium"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/aclBackButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Section -->

    <!-- Horizontal Layout with Two Buttons -->
    <ScrollView
        android:id="@+id/scrollable_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading_text"
        app:layout_constraintVertical_bias="0.0">

        <!-- Content inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/address_verification"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/address_verification_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/car_insurance_requirement"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/car_insurance_requirement_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/driver_liability_disclaimer"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/driver_liability_disclaimer_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/ride_taker_liability_disclaimer"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/ride_taker_liability_disclaimer_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/criminal_history_affirmation"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/criminal_history_affirmation_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/driver_liability_disclaimer"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/driver_liability_disclaimer_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/ride_taker_liability_disclaimer"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/ride_taker_liability_disclaimer_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/criminal_history_affirmation"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/criminal_history_affirmation_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/accuracy_of_information_statement"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins"
                android:text="@string/accuracy_of_information_statement_description"
                android:textColor="@color/subHeading"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_bg_platinum_border"
            android:textSize="16sp"
            android:paddingTop="0dp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:layout_height="48dp"
            android:text="@string/deciline" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:layout_height="60dp"
            android:text="@string/accept" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
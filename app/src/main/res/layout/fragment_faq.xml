<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".enteredUser.settings.Fragment_FAQ">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/add_activity"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="?android:attr/colorBackgroundFloating"
                android:orientation="vertical"
                android:gravity="start|top"
                android:layout_marginEnd="16dp"
                android:padding="16dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/car_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_related"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schedule_ride"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="?android:attr/colorBackgroundFloating"
                android:orientation="vertical"
                android:gravity="start|top"
                android:padding="16dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/child_img" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_related"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:weightSum="2">
            <LinearLayout android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="?android:attr/colorBackgroundFloating"
                android:orientation="vertical"
                android:gravity="start|top"
                android:layout_marginEnd="16dp"
                android:padding="16dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_related"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="?android:attr/colorBackgroundFloating"
                android:orientation="vertical"
                android:gravity="start|top"
                android:padding="16dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user_image" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/child_related"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_this_app_for"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="8dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/who_can_ride"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:padding="24dp"
    android:paddingVertical="16dp" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/textColor"
        android:text="@string/preferred_pickup_time" />

    <RadioGroup android:id="@+id/radioGroupOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radioOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:tag="10"
            android:text="@string/_10_min_before" />
        <RadioButton android:id="@+id/radioOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="10dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:tag="20"
            android:text="@string/_20_min_before" />
        <RadioButton android:id="@+id/radioOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="10dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:tag="30"
            android:text="@string/_30_min_before" />
        <RadioButton android:id="@+id/radioOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="10dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:tag="40"
            android:text="@string/_40_min_before" />
    </RadioGroup>

    <Button android:id="@+id/btnSave"
        android:backgroundTint="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:enabled="true"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_margin="0dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/white"
        android:clickable="false"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:text="@string/apply" />
</LinearLayout>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Light gray background -->
            <stroke android:width="1dp" android:color="#D3D3D3" /> <!-- Gray border -->
            <corners android:radius="28dp" /> <!-- Rounded corners -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Same background -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border on focus -->
            <corners android:radius="28dp" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>
